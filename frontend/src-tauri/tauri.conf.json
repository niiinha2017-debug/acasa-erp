{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Acasa",
  "version": "0.1.4",
  "identifier": "com.acasa.erp",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "A Casa Marcenaria",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; font-src 'self' data:; script-src 'self'; connect-src 'self' https://acasamarcenaria.com.br https://aplicativo.acasamarcenaria.com.br;"
    }
  },
  "plugins": {
    "http": {
      "scope": [
        "https://acasamarcenaria.com.br/**",
        "https://aplicativo.acasamarcenaria.com.br/**"
      ]
    },
    "updater": {
      "endpoints": [
        "https://aplicativo.acasamarcenaria.com.br/updates/tauri/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRFQTAzQUE0RjdFQUQwNzIKUldSeTBPcjNwRHFnVHJJeDhyMkNMYTdCcXdqc1o1RjVJZWNjc0hoSWpzTEc1NWlOWUJ3KzhWLzYK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}