{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Acasa",
  "version": "0.1.0",
  "identifier": "com.acasa.erp",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
"app": {
  "security": {
    "csp": "default-src 'self'; connect-src 'self' https://acasamarcenaria.com.br"
  },
  "windows": [
    {
      "title": "A Casa Marcenaria",
      "width": 1280,
      "height": 720,
      "resizable": true,
      "devtools": true
    }
  ]
},
"plugins": {
  "http": {
    "scope": ["https://acasamarcenaria.com.br/**"]
  }
},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
