NODE_ENV=production

DB_HOST=SEU_HOST_PRODUCAO
DB_PORT=3306
DB_USER=SEU_USUARIO_PRODUCAO
DB_PASSWORD=SUA_SENHA_PRODUCAO
DB_DATABASE=acasa_erp

JWT_SECRET=ALTERE_PARA_UM_SEGREDO_FORTE
PONTO_APP_URL=https://ponto.acasamarcenaria.com.br
PONTO_APK_URL=https://ponto.acasamarcenaria.com.br/acasa-ponto.apk

DATABASE_URL="mysql://SEU_USUARIO_PRODUCAO:SUA_SENHA_PRODUCAO@SEU_HOST_PRODUCAO:3306/acasa_erp"

MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=SEU_EMAIL
MAIL_PASS=SUA_SENHA_APP
MAIL_FROM="ACASA ERP <SEU_EMAIL>"

MAIL_TEST_ENABLED=false

# URL base do backend para links públicos (ex.: link do PDF do contrato). Opcional; em dev usa a URL da requisição.
# APP_URL=https://api.seudominio.com

# Subdomínio de aceite de contrato (opcional; se definido, o backend retorna linkAceitar nesse domínio)
# CONTRATO_ACEITE_BASE_URL=https://contrato.acasamarcenaria.com.br

# --- Notificações e automação (APIs grátis) ---

# Telegram Bot API (100% grátis): notificações "Ponto Batido" e "Relatório Disponível" no celular
# Crie um bot em @BotFather, pegue o token. Para obter o CHAT_ID, envie /start ao bot e use getUpdates
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=

# n8n (self-hosted): webhooks disparados pelo ERP para workflows (ex.: custo hora extra → DRE)
# No n8n crie um Webhook e cole a URL aqui
# N8N_WEBHOOK_URL_PONTO_BATIDO=
# N8N_WEBHOOK_URL_RELATORIO=

# Brevo (ex-Sendinblue): até 300 e-mails/dia grátis. Espelho de ponto em PDF por e-mail
# Se definido, o envio de espelho de ponto usa Brevo em vez do SMTP
# BREVO_API_KEY=
# BREVO_SENDER_EMAIL=  (opcional; senão usa MAIL_USER)
